<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/form_label_margin_top"
    android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginLeft="@dimen/recycler_item_left_margin"
        android:layout_marginStart="@dimen/recycler_item_left_margin"
        android:layout_marginRight="@dimen/recycler_item_right_margin"
        android:layout_marginEnd="@dimen/recycler_item_right_margin"
        android:id="@+id/geo_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:singleLine="true"
        tools:text="13 November, 2015"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/recycler_item_left_margin"
        android:layout_marginStart="@dimen/recycler_item_left_margin"
        android:layout_marginRight="@dimen/recycler_item_right_margin"
        android:layout_marginEnd="@dimen/recycler_item_right_margin"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/geo_item_time_entered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            tools:text="In: Monday, 12/3/3 : 8:20"/>

        <TextView
            android:id="@+id/geo_item_time_left"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/recycler_item_left_margin"
            android:layout_marginStart="@dimen/recycler_item_left_margin"
            android:layout_marginRight="@dimen/recycler_item_right_margin"
            android:layout_marginEnd="@dimen/recycler_item_right_margin"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="end"
            tools:text="Out: Monday, 12/3/3 : 8:20"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/recycler_item_top_margin"
        android:layout_marginLeft="@dimen/recycler_item_left_margin"
        android:layout_marginStart="@dimen/recycler_item_left_margin"
        android:layout_marginRight="@dimen/recycler_item_right_margin"
        android:layout_marginEnd="@dimen/recycler_item_right_margin"
        android:id="@+id/geo_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="55 Moleye Street tools:text tools:text tools:text tools:text tools:text tools:text"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/recycler_item_left_margin"
        android:layout_marginStart="@dimen/recycler_item_left_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_spent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_spent"
            android:text="@string/time_spent"
            tools:text="4:30mins"/>
    </LinearLayout>

</LinearLayout>